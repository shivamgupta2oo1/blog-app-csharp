@model Bloggie.Web.Models.ViewModel.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<div class="container mx-auto justify-content-center">
    <div class="col-12 col-lg-6">
        <form method="post">
            <h1 class="mt-3 mb-3 h3">Login</h1>

            <div class="form-group mb-3">
                <label for="form-label">Username</label>
                <input type="text" class="form-control" id="username" asp-for="Username">
            </div>

            <div class="form-group mb-3">
                <label for="UserName">Password</label>
                <input type="password" class="form-control" id="password" asp-for="Password">
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-dark">Login</button>
            </div>

            <input type="hidden" asp-for="ReturnUrl">
        </form>
    </div>
</div>
