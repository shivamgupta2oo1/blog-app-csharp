@model List<Bloggie.Web.Models.Domain.BlogPost>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-5 py-5">
        <div class="col-12 col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">
                Bloggie - The Dev Blog
            </h1>
            <p class="lead">
                BLoggie is the gome of blogs converting a varst range of topicts like HTML, Javascript, CSS, ASP.NET,
                C#, Angular etc.-
                want to read the leatest articels? Join the bloggie app and
                get weekly blogs in you email.
            </p>
        </div>
        <div class="col-12 col-lg-6">
            <img src="https://images.pexels.com/photos/6804610/pexels-photo-6804610.jpeg?auto=compress&cs=tinysrgb&w=600"
                alt="Bloogie - Dev Blogs" class="d-block mx-lg-auto img-fluid" width="500">
        </div>
    </div>
</div>


<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            @if (Model != null && Model.Any())
            {
                @foreach (var blogpost in Model)
                {
                    <div class="mb-5  bg-light box-shadow">
                        <img src="@blogpost.FeatureImageUrl" alt="@blogpost.Heading" class="mb-3 d-flex img-fluid">
                        <h2 class="text-center">@blogpost.Heading</h2>
                        <p class="mb-4">
                            Author: @blogpost.Author
                            <br />
                            Published Date: TablesTables @blogpost.PublishedDate.ToShortDateString()
                        </p>

                        <p class="mb-4">
                            @foreach (var tag in blogpost.Tags)
                            {
                                <span class="badge bg-secondary me-2">@tag.Name</span>
                            }
                        </p>

                        <p class="mb-4">@blogpost.ShortDescription</p>
                        <a class="btn btn-dark mb-4" asp-area="" asp-controller="Blogs" asp-action="Index" asp-route-urlHandle="@blogpost.UrlHandle">Read More</a>
                    </div>
                }
            }
        </div>
    </div>
</div>