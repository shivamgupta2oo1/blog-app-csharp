@model Bloggie.Web.Models.ViewModel.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-5 py-5">
        <div class="col-12 col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">
                Bloggie - The Dev Blog
            </h1>
            <p class="lead">
                BLoggie is the gome of blogs converting a varst range of topicts like HTML, Javascript, CSS, ASP.NET,
                C#, Angular etc.-
                want to read the leatest articels? Join the bloggie app and
                get weekly blogs in you email.
            </p>
        </div>
        <div class="col-12 col-lg-6">
            <img src="https://images.pexels.com/photos/6804610/pexels-photo-6804610.jpeg?auto=compress&cs=tinysrgb&w=600"
                alt="Bloogie - Dev Blogs" class="d-block mx-lg-auto img-fluid" width="500">
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            @if (Model != null && Model.Tags.Any())
            {
                foreach (var tag in Model.Tags)
                {
                    <span class="badge bg-dark me-2">@tag.Name</span>
                }
            }
        </div>

    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            @if (Model != null && Model.BlogPosts.Any())
            {
                @foreach (var blogpost in Model.BlogPosts)
                {
                    <div class="mb-5  bg-light box-shadow p-5">
                        <img src="@blogpost.FeatureImageUrl" alt="@blogpost.Heading"
                            style="display: block; width: 100%; height: auto; class=" mb-3 d-flex img-fluid">
                        <h2 class="text-center">@blogpost.Heading</h2>
                        <p class="mb-4">
                            Author: @blogpost.Author
                            <br />
                            Published Date: TablesTables @blogpost.PublishedDate.ToShortDateString()
                        </p>

                        <p class="mb-4">
                            @foreach (var tag in blogpost.Tags)
                            {
                                <span class="badge bg-secondary me-2">@tag.Name</span>
                            }
                        </p>

                        <p class="mb-4">@blogpost.ShortDescription</p>
                        <a class="btn btn-dark mb-4" asp-area="" asp-controller="Blogs" asp-action="Index"
                            asp-route-urlHandle="@blogpost.UrlHandle">Read More</a>

                    </div>
                }
                Console.WriteLine("this is clicked ");
            }
        </div>
    </div>
</div>